<% provide :title, 'Ana sayfa' %>
<% content_for(:forum_content) do %>
  <div class="large-12 columns">
    <h1>Hoş geldiniz!</h1>
    <div class="topics panel columns radius ">
      <% if @topics.any? %>
        <%= render @topics %>
      <% else %>
        <p>Henüz hiç bir konu açılmamış.</p>
      <% end%>
    </div>
   
    <center> <br><h1>Rails Ortam Değişkenleri</h1></br></center>
    <center>
      <% request.env.each do |key, value| %>
 <strong><%= key %></strong> => <%= value %><br/>
<% end %>
    </center>
  
  </div>
<% end %>
